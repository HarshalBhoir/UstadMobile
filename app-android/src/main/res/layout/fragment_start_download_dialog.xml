<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:visibility="gone"
        android:indeterminate="true"
        android:id="@+id/fragment_start_download_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@+id/fragment_start_download_progress_bar"
        android:layout_toEndOf="@+id/fragment_start_download_progress_bar"
        android:id="@+id/fragment_start_download_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/fragment_start_download_progress_bar"
        android:id="@+id/fragment_start_download_size_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

</RelativeLayout>
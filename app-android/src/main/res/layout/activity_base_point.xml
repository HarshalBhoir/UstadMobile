<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ustadmobile.port.android.view.LoginActivity">

    <include android:id="@+id/um_toolbar" layout="@layout/toolbar"/>

    <android.support.design.widget.TabLayout
        style="@style/AppTabLayout"
        android:layout_width="match_parent"
        android:id="@+id/basepoint_tabs"
        android:layout_height="wrap_content"
        app:tabMode="scrollable" />

    <!--
    This could be used to render a shadow on legacy devices
    <View
        android:id="@+id/toolbar_shadow"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/toolbar_shadow" />
    -->

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/basepoint_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>

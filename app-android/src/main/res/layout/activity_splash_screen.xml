<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ustadmobile.port.android.view.SplashScreenActivity">

   <ImageView
       android:layout_marginTop="100dp"
       android:id="@+id/app_logo"
       android:layout_centerHorizontal="true"
       android:src="@drawable/ic_launch_green"
       android:layout_width="100dp"
       android:layout_height="100dp"/>

   <TextView
       android:textSize="@dimen/text_title_big"
       android:gravity="center"
       android:layout_marginTop="@dimen/dimen_20dp"
       android:layout_below="@+id/app_logo"
       android:id="@+id/app_name"
       android:textColor="@color/colorPrimary"
       android:layout_width="match_parent"
       android:text="@string/app_name"
       android:layout_height="wrap_content"/>

   <LinearLayout
       android:layout_marginTop="@dimen/dimen_40dp"
       android:layout_below="@+id/app_name"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="@dimen/dimen_70dp">
      <ImageView
          android:layout_weight="1"
          android:src="@drawable/supporter_1"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />

      <ImageView
          android:layout_weight="1"
          android:src="@drawable/supporter_2"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>

      <ImageView
          android:layout_weight="1"
          android:src="@drawable/supporter_3"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>

   </LinearLayout>

   <TextView
       android:gravity="center"
       android:layout_marginBottom="@dimen/dimen_10dp"
       android:textColor="@color/text_secondary"
       android:layout_above="@+id/powered"
       android:text="@string/splash_poweredby_label"
       android:textSize="@dimen/text_body_small"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>


   <ImageView
       android:layout_centerHorizontal="true"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="@dimen/dimen_20dp"
       android:id="@+id/powered"
       android:scaleType="fitCenter"
       android:src="@drawable/ic_ustad_logo_03"
       android:layout_width="wrap_content"
       android:layout_height="@dimen/dimen_40dp"/>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/bottom_navigation_height"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <android.support.constraint.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:paddingBottom="@dimen/bottom_navigation_height"
    >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/activity_select_sale_product_appbar" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent">

            <android.support.v7.widget.Toolbar android:id="@+id/activity_select_sale_product_toolbar"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="@color/primary" app:layout_constraintStart_toStartOf="parent"
                app:layout_scrollFlags="scroll|enterAlways" app:title="@string/add_item"
                tools:layout_editor_absoluteY="0dp" />
        </android.support.design.widget.AppBarLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_select_sale_product_collection_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:scrollbars="vertical"
            android:visibility="visible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_select_sale_product_collection_title" />

        <TextView
            android:id="@+id/activity_select_sale_product_collection_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/collections"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_select_sale_product_category_rv" />

        <TextView
            android:id="@+id/activity_select_sale_product_category_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/by_category"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_select_sale_product_recent_rv" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_select_sale_product_category_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:scrollbars="horizontal"
            android:visibility="visible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_select_sale_product_category_title" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_select_sale_product_recent_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:scrollbars="horizontal"
            android:visibility="visible"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_select_sale_product_recent_title" />

        <TextView
            android:id="@+id/activity_select_sale_product_recent_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/most_recent"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_select_sale_product_appbar" />

        <TextView
            android:id="@+id/activity_select_sale_product_recent_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/more_caps"
            android:textColor="@color/primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_select_sale_product_appbar" />

        <TextView
            android:id="@+id/activity_select_sale_product_category_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/more_caps"
            android:textColor="@color/primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_select_sale_product_recent_rv" />

        <TextView
            android:id="@+id/activity_select_sale_product_collections_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/more_caps"
            android:textColor="@color/primary"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_select_sale_product_category_rv" />

        <com.github.clans.fab.FloatingActionMenu
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/activity_select_sale_product_fab_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/activity_select_sale_product_fab_subcategory"
                fab:fab_colorNormal="@color/fab"
                fab:fab_colorPressed="@color/fab_pressed"
                fab:fab_colorRipple="@color/fab_ripple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fab_size="mini"
                app:fab_label="@string/subcategory"
                android:layout_gravity="bottom|right"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_sub_category_white_24dp"
                />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/activity_select_sale_product_fab_item"
                fab:fab_colorNormal="@color/fab"
                fab:fab_colorPressed="@color/fab_pressed"
                fab:fab_colorRipple="@color/fab_ripple"
                android:layout_width="wrap_content"
                app:fab_size="mini"
                android:layout_height="wrap_content"
                app:fab_label="@string/item"
                android:layout_gravity="bottom|right"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_hanger_white_24dp"
                 />
        </com.github.clans.fab.FloatingActionMenu>

    </android.support.constraint.ConstraintLayout>
</ScrollView>
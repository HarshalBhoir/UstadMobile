<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_clazzlist_clazz_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="?android:selectableItemBackground"
    android:elevation="2dp"
    app:cardCornerRadius="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_dashboard_entry_cl"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_dashboard_entry_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"

            app:layout_constraintEnd_toStartOf="@+id/item_dashboard_entry_dots"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_flag_black_24dp" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_dashboard_entry_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_more_vert_black_24dp" />


        <TextView
            android:id="@+id/item_dashboard_entry_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="8dp"
            android:text="Report Title"
            android:textAppearance="@android:style/TextAppearance.Material.Headline"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/item_dashboard_entry_ll"
            android:layout_width="350dp"
            android:layout_height="280dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_dashboard_entry_title">

            <View
                android:id="@+id/item_dashboard_entry_report_view_placeholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"></View>

        </LinearLayout>


        <TextView
            android:id="@+id/item_dashboard_entry_tag_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"

            android:text="@string/tags"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_dashboard_entry_ll" />

        <android.support.design.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_dashboard_entry_tag_title">

        </android.support.design.chip.ChipGroup>

        <TextView
            android:id="@+id/item_dahboard_entry_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="-95"
            android:text="@string/currency_afs"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintBottom_toBottomOf="@+id/item_dashboard_entry_ll"
            app:layout_constraintEnd_toStartOf="@+id/item_dashboard_entry_ll"
            app:layout_constraintTop_toTopOf="@+id/item_dashboard_entry_ll"
            tools:visibility="visible" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</android.support.v7.widget.CardView>

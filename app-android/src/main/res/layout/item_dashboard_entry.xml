<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_clazzlist_clazz_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="?android:selectableItemBackground"
    android:elevation="2dp"
    app:cardCornerRadius="2dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/item_dashboard_entry_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_dashboard_entry_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"

            app:layout_constraintEnd_toStartOf="@+id/item_dashboard_entry_dots"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_flag_black_24dp" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_dashboard_entry_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_more_vert_black_24dp" />


        <TextView
            android:id="@+id/item_dashboard_entry_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="8dp"
            android:text="Report Title"
            android:textAppearance="@android:style/TextAppearance.Material.Headline"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view9"
            android:layout_width="250dp"
            android:layout_height="300dp"
            app:layout_constraintTop_toBottomOf="@id/item_dashboard_entry_title"></View>

        <TextView
            android:id="@+id/item_dashboard_entry_tag_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"

            android:text="@string/tags"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view9" />

        <android.support.design.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_dashboard_entry_tag_title">

        </android.support.design.chip.ChipGroup>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>

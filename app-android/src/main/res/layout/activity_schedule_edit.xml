<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable
            name="schedule"
            type="com.ustadmobile.lib.db.entities.Schedule" />

        <variable
            name="loading"
            type="boolean" />

        <variable
            name="fieldsEnabled"
            type="boolean" />

        <variable
            name="frequencyOptions"
            type="java.util.List&lt;com.ustadmobile.core.util.MessageIdOption&gt;"/>

        <variable
            name="dayOptions"
            type="java.util.List&lt;com.ustadmobile.core.util.MessageIdOption&gt;"/>


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_schedule_edit_cl"
        tools:context="com.ustadmobile.port.android.view.ScheduleEditActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/activity_schedule_edit_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/activity_schedule_edit_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="@color/primary"
                app:layout_scrollFlags="scroll|enterAlways" />

            <ProgressBar
                android:visibility="@{loading ? View.VISIBLE : View.GONE}"
                android:indeterminate="true"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:id="@+id/activity_schedule_edit_progressbar"
                android:layout_height="@dimen/dimen_4dp" />

        </com.google.android.material.appbar.AppBarLayout>


        <ScrollView
            android:id="@+id/activity_schedule_edit_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_schedule_edit_appbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_clazz_edit_edit_clx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fragment_add_schedule_dialog_schedule_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/schedule"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.ustadmobile.port.android.view.MessageIdSpinner
                    android:id="@+id/fragment_add_schedule_dialog_schedule_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:paddingTop="20dp"
                    android:spinnerMode="dialog"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_add_schedule_dialog_schedule_heading"
                    app:selectedMessageIdOption="@={schedule.scheduleFrequency}"
                    app:messageIdOptions="@{frequencyOptions}"/>


                <TextView
                    android:id="@+id/fragment_add_schedule_dialog_day_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/day"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_add_schedule_dialog_schedule_spinner"
                    android:layout_marginLeft="16dp" />


                <com.ustadmobile.port.android.view.MessageIdSpinner
                    android:id="@+id/fragment_add_schedule_dialog_day_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:paddingTop="20dp"
                    android:spinnerMode="dialog"
                    app:selectedMessageIdOption="@={schedule.scheduleDay}"
                    app:messageIdOptions="@{dayOptions}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_add_schedule_dialog_day_heading" />

                <TextView
                    android:id="@+id/fragment_add_schedule_dialog_from_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/fromC"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_add_schedule_dialog_day_spinner"
                    android:layout_marginLeft="16dp" />

                <TextView
                    android:id="@+id/fragment_add_schedule_dialog_to_heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="124dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/toC"
                    app:layout_constraintStart_toEndOf="@+id/fragment_add_schedule_dialog_from_heading"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_add_schedule_dialog_day_spinner"
                    android:layout_marginLeft="124dp" />


                <EditText
                    android:id="@+id/fragment_add_schedule_dialog_from_time"
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_add_schedule_dialog_from_heading"
                    app:timeValue="@={schedule.sceduleStartTime}"
                    android:focusable="false"
                    android:layout_marginLeft="16dp" />

                <EditText
                    android:id="@+id/fragment_add_schedule_dialog_to_time"
                    android:layout_width="97dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    app:timeValue="@={schedule.scheduleEndTime}"
                    android:focusable="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/fragment_add_schedule_dialog_from_time"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_add_schedule_dialog_to_heading" />

                <TextView
                    android:id="@+id/fragment_add_schedule_dialog_error_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/fragment_add_schedule_dialog_from_time" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
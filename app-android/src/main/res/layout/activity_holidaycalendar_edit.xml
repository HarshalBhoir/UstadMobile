<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <import type="com.toughra.ustadmobile.R"/>

        <variable
            name="holidaycalendar"
            type="com.ustadmobile.lib.db.entities.HolidayCalendar" />

        <variable
            name="loading"
            type="boolean" />

        <variable
            name="fieldsEnabled"
            type="boolean" />

        <variable
            name="activityEventHandler"
            type="com.ustadmobile.port.android.view.HolidayCalendarEditActivityEventHandler" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_holidaycalendar_edit_cl"
        tools:context="com.ustadmobile.port.android.view.HolidayCalendarEditActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/activity_holidaycalendar_edit_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/activity_holidaycalendar_edit_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="@color/primary"
                app:layout_scrollFlags="scroll|enterAlways" />

            <ProgressBar
                android:visibility="@{loading ? View.VISIBLE : View.GONE}"
                android:indeterminate="true"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:id="@+id/activity_holidaycalendar_edit_progressbar"
                android:layout_height="@dimen/dimen_4dp" />

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/activity_holidaycalendar_edit_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activity_clazz_edit_edit_clx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- TODO: Put the actual view for editing HolidayCalendar here using two-way data binding -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/activity_holiday_calendar_name_text"
                    android:enabled="@{fieldsEnabled}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/form_margin_horizontal"
                    android:hint="@string/name"
                    app:hintEnabled="true"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:text="@={holidaycalendar.umCalendarName}"
                        android:enabled="@{fieldsEnabled}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>

                <include layout="@layout/item_createnew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:createNewText="@{@string/add_a(@string/holiday)}"
                    app:onClickNew="@{() -> activityEventHandler.onClickNewHoliday()}"
                    app:layout_constraintTop_toBottomOf="@+id/activity_holiday_calendar_name_text"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/activity_holidaycalendar_holiday_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_holiday"
                    tools:itemCount="2"
                    app:layout_constraintTop_toBottomOf="@+id/item_createnew_layout"
                    app:layout_constraintStart_toStartOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
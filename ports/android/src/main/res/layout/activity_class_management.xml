<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ustadmobile.port.android.view.ClassManagementActivity">

    <include android:id="@+id/um_toolbar" layout="@layout/toolbar"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top">

        <Button
            android:id="@+id/class_management_attendance_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/class_management_exams_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/class_management_reports_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

    <com.ustadmobile.port.android.view.StudentListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/class_management_studentlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
			 xmlns:m="urn:import:gwt.material.design.client.ui">

    <m:MaterialPanel ui:field="entryPanel">
	    <m:MaterialColumn grid="l6 m6 s12">
			<m:MaterialCard backgroundColor="WHITE" orientation="LANDSCAPE">
				<m:MaterialCardImage waves="LIGHT">
					<m:MaterialImage ui:field="entryImage" url="/com/ustadmobile/core/blank.png"/>
				</m:MaterialCardImage>
				<m:MaterialCardContent textColor="BLACK">
					<m:MaterialLabel ui:field="entryTitle" text="Title of your card" fontSize="1.5em" addStyleNames="truncate" />
					<m:MaterialLabel ui:field="entryText" text="" addStyleNames="truncate"/>
				</m:MaterialCardContent>
				<m:MaterialCardAction>
					<!--  <m:MaterialLink iconType="SHARE" textColor="BLACK" /> -->
					<!--  <m:MaterialLink ui:field="entryLink" iconType="LINK" href="" textColor="BLACK" /> -->
					<m:MaterialButton ui:field="go" text="Go"/>
				</m:MaterialCardAction>
			</m:MaterialCard>
		</m:MaterialColumn>
	</m:MaterialPanel>
    
</ui:UiBinder>